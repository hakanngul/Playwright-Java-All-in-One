<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="API Smoke Tests" parallel="methods" thread-count="2">
    
    <listeners>
        <listener class-name="com.starlettech.listeners.TestListener"/>
        <listener class-name="com.starlettech.listeners.ReportPortalListener"/>
    </listeners>
    
    <test name="API Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="api"/>
            </run>
        </groups>
        <classes>
            <class name="starlettech.tests.api.ApiSmokeTests"/>
            <class name="starlettech.tests.api.AuthApiTests">
                <methods>
                    <include name="testValidLogin"/>
                    <include name="testInvalidLogin"/>
                    <include name="testTokenValidation"/>
                </methods>
            </class>
            <class name="starlettech.tests.api.UserApiTests">
                <methods>
                    <include name="testGetAllUsers"/>
                    <include name="testGetUserById"/>
                    <include name="testCreateUser"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
